BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            size:100, 100
            id: input_number
            font_size: 48
            multiline: False
            size_hint: 2, 1
            on_text: app.convert_miles_to_km(int(input_number.text))
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 100
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert Miles to Km'
#        on_press: app.convert_miles_to_km(int(input_number.text))
    Label:
        id: output_label
        text: app.message
        font_size: 48
        color: ('pink')